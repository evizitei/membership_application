!!!
%html
  %head
    %title= content_for?(:title) ? yield(:title) : "Untitled"
    = stylesheet_link_tag "/jquery_ui/jquery-ui-1.8.9.custom.css","application.css","nifty"
    = javascript_include_tag "jquery-1.5.min.js","/jquery_ui/jquery-ui-1.8.9.custom.min.js","application.js"
    = csrf_meta_tag
    = yield(:head)
  %body
    #container
      - flash.each do |name, msg| 
        = content_tag :div, msg, :id => "flash_#{name}"
      = content_tag :h1, yield(:title) if show_title?
      = yield