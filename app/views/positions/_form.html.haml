= form_for(position) do |f|
  = render "shared/error_messages", :target => position
  %fieldset
    .field
      = f.label :name
      %br
      = f.text_field :name
    .field
      = f.label :description
      %br
      = f.text_area :description
    .field
      = f.label :active
      %br
      = f.check_box :active
  =submit_tag "Save"